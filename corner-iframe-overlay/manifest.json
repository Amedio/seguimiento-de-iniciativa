{
  "manifest_version": 3,
  "name": "Corner Iframe Overlay",
  "version": "1.0.0",
  "description": "Shows a small iframe overlay in the top-right corner when visiting a specific site.",
  "content_scripts": [
    {
      "matches": ["https://www.dndbeyond.com/games/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://jynus.com/dnd/*"
  ],
  "action": {
    "default_title": "Corner Iframe Overlay"
  },
  "web_accessible_resources": [
  {
    "resources": ["minimize.webp", "maximize.webp", "close.webp"],
    "matches": ["<all_urls>"]
  }
  ]
}
